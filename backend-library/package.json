{
  "name": "nomo-id",
  "version": "0.0.12",
  "description": "Nomo library used for handling the communication with the Nomo App",
  "main": "dist/nomo-id.cjs.js",
  "module": "dist/nomo-id.esm.js",
  "browser": "dist/nomo-id.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
