    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "bitcoinjs-message": "2.2.0",
    "eslint": "^8.24.0",
    "express": "^4.18.1",
    "jest": "^29.1.2",
    "rollup": "^2.79.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
